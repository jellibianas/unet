{% extends '@SymEdit/Page/base.html.twig' %}

{% block title %}Login to SymEdit{% endblock %}

{% block breadcrumbs '' %}

{% block content %}
<div class="row">
    <div id="symedit-login-container" class="col-md-offset-4">
        <h3>Login</h3>

        {% if error %}
        <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form id="symedit-login" class="col-md-4" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="input-group">
                <span class="input-group-addon">{{ icon('user') }}</span>
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}">
            </div>

            <br>

            <div class="input-group">
                <span class="input-group-addon">{{ icon('lock') }}</span>
                <input type="password" id="password" class="form-control" name="_password" required="required" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" />
            </div>

            <br>

            <div class="clearfix">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                    </label>
                </div>
            </div>

            <hr>

            <div class="clearfix">
                <button class="btn btn-default btn-sm pull-right" type="submit" id="_submit" name="_submit">
                    {{ icon('unlock') }}
                    {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}
                </button>
                <div class="forgot-password">
                    <a href="{{ path('fos_user_resetting_request') }}">Forgot Password</a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
